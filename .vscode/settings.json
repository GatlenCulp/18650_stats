{
	// SSH Configuration
	// 

	// File Type Associations
	"files.associations": {
		"*.env*": "dotenv",
		"*.cursorrules": "markdown",
		// 
	},

	// Excluded Files Won't Show in Sidebar
	"files.exclude": {
		/* ━━━━━━━━━━━━━━━━━━ PROJECT-SPECIFIC IGNORES ━━━━━━━━━━━━━━━━━━ */
		"**/manual_test": true,
		"LICENSE*": true,

		/* ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━ VCS ━━━━━━━━━━━━━━━━━━━━━━━━━━━━ */
		".git": true,
		".github": true,
		".gitattributes": true,

		/* ━━━━━━━━━━━━━━━━━━ OPERATING SYSTEM IGNORES ━━━━━━━━━━━━━━━━━━ */
		"**/.DS_Store": true,
		"**/Icon?": true,
		"**/Thumbs.db": true,
		"**/*.bak": true,
		"**/*.sav": true,
		"**/*.backup": true,
		"**/*~[0-9]*": true,

		/* ━━━━━━━━━━━━━━━━━━━━━━━ EDITOR IGNORES ━━━━━━━━━━━━━━━━━━━━━━━ */
		/* ───────────────────────────── Vim ──────────────────────────── */
		"**/.*.swp": true,
		"**/.*.swo": true,
		/* ─────────────────────────── VSCode ─────────────────────────── */
        "**/.vscode": false,
		"**/.history": true,
		/* ─────────────────────────── Cursor ─────────────────────────── */
		"**/.cursor": false,
		/* ─────────────────────────── PyCharm ────────────────────────── */
        "**/.idea": false,
		/* ─────────────────────────── Spyder ─────────────────────────── */
		"**/.spyderproject": true,
		"**/.spyproject": true,
		/* ─────────────────────────── Sublime ────────────────────────── */
		"**/*.sublime-*": true,

		/* ━━━━━━━━━━━━━━━━━━━━━ PYTHON CORE IGNORES ━━━━━━━━━━━━━━━━━━━━ */
		".python-version": true,
		"**/__pycache__": true,
		"**/*.py[cod]": true,
		"**/*$py.class": true,
		"**/*.so": true,
		"**/.Python": true,
		"**/develop-eggs": true,
		"**/.eggs": true,
		"**/*.egg-info": true,
		"**/.installed.cfg": true,
		"**/*.egg": true,
		"**/*.manifest": true,
		"**/*.spec": true,
		"**/pip-log.txt": true,
		"**/pip-delete-this-directory.txt": true,
		"**/htmlcov": true,
		"**/.tox": true,
		"**/.nox": true,
		"**/.coverage": true,
		"**/.coverage.*": true,
		"**/.cache": true,
		"**/nosetests.xml": true,
		"**/coverage.xml": true,
		"**/*.cover": true,
		"**/.hypothesis": true,
		"**/.pytest_cache": true,
		"**/cover": true,
		"**/.ruff_cache": true,
		"**/.mypy_cache": true,
		"**/.dmypy.json": true,
		"**/dmypy.json": true,
		"**/.pytype": true,
		"**/.ruby-lsp": true,
		"**/*.mo": true,
		"**/*.pot": true,

		/* ━━━━━━━━━━━━━ ENVIRONMENT & DEPENDENCY MANAGEMENT ━━━━━━━━━━━━ */
		"**/env": true,
		"**/ENV": true,
		"**/env.bak": true,
		"**/venv.bak": true,
		"**/__pypackages__": true,
		"**/venv": true,
		"**/.venv": true,
		// 
		"requirements.txt": true,
		"uv.lock": true,
		// 

		/* ━━━━━━━━━━━━━━━━ PYTHON FRAMEWORKS & LIBRARIES ━━━━━━━━━━━━━━━ */
		// 
		"**/celerybeat-schedule": true,
		"**/celerybeat.pid": true,
		"**/.pyre": true,
		"**/.ropeproject": true,
		"**/cython_debug": true,
		"**/*.sage.py": true,
		"**/dump.rdb": true,

		// 
		/* ━━━━━━━━━━━━━━━━ LATEX & DOCUMENT PREPARATION ━━━━━━━━━━━━━━━━ */
		"**/*.aux": true,
		"**/*.bbl": true,
		"**/*.bcf": true,
		"**/*.blg": true,
		"**/*.fdb_latexmk": true,
		"**/*.fls": true,
		"**/*.lof": true,
		"**/*.lot": true,
		"**/*.out": true,
		"**/*.synctex.gz*": true,
		"**/*.toc": true,
		"**/_minted*": true,
		// 
	},
	"explorerExclude.backup": {},
	
	/* ━━━━━━━━━━━━━━━━━━━━━━ PYTHON SETTINGS ━━━━━━━━━━━━━━━━━━━━━━━ */
	// 
	"python.defaultInterpreterPath": ".venv/bin/python",
	// 
	"python.testing.pytestEnabled": true,
	"python.testing.pytestArgs": ["tests"],
	
	/* ━━━━━━━━━━━━━━━━━━ EDITOR THEME CUSTOMIZATION ━━━━━━━━━━━━━━━━━━ */
	"workbench.colorCustomizations": {
		"editor.lineHighlightBackground": "#1073cf2d",
		"editor.lineHighlightBorder": "#9fced11f"
	}
}
